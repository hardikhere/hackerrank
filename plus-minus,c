#include "stdio.h"
#include "math.h"
int main(){
    int n,i,countn=0,countp=0,countz=0;
    scanf("%d",&n);
    int arr[n];
    float p,neg,z;
    for(i=0;i<n;i++){
       scanf("%d",&arr[i]);
        if(arr[i]<0){
            countn++;
        }
       else if(arr[i]>0){
            countp++;
        }
        else if(arr[i]==0){
            countz++;
        }
}
   p=(float)countp/n;
    printf("%f\n",p);
    neg=(float)countn/n;
    printf("%f\n",neg);
    z=(float)countz/n;
    printf("%f\n",z);
    getchar();
    return 0;

}
